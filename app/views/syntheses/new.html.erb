<h2>New oligo synthesis order</h2>

<% form_for(@synthesis, :url => {:action => 'orderparams'}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :researcher %><br />
    <%= f.collection_select (:researcher, @rnames, :researcher_name, :researcher_name) %>
  </p>
  <p>
    <%= f.label 'Synthesize oligos for gene(s):' %><br />
	<%= f.collection_select(:gene_code, @genes, :gene_code, :gene_code) %> 
  </p>
  <p>
    <%= f.submit "GetOligos" %>
  </p>
<% end %>

<%= link_to 'Back', syntheses_path %>
