<h1>Listing researchers</h1>

<table>
  <tr>
    <th>Researcher name</th>
    <th>Phone number</th>
    <th>Company</th>
  </tr>

<% for researcher in @researchers %>
  <tr>
    <td><%=h researcher.researcher_name %></td>
    <td><%=h researcher.phone_number %></td>
    <td><%=h researcher.company %></td>
    <td><%= link_to 'Show', researcher %></td>
    <td><%= link_to 'Edit', edit_researcher_path(researcher) %></td>
    <td><%= link_to 'Destroy', researcher, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

