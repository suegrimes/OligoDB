<h1>Editing gene</h1>

<% form_for(@gene) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :gene_code %><br />
    <%= f.text_field :gene_code %>
  </p>
  <p>
    <%= f.label :chromosome_nr %><br />
    <%= f.text_field :chromosome_nr %>
  </p>
  <p>
    <%= f.label :accession_nr %><br />
    <%= f.text_field :accession_nr %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @gene %> |
<%= link_to 'Back', genes_path %>
