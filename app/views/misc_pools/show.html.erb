	<td><% if @misc_pool.storage_location %><%=h @misc_pool.storage_location.location_string %><% end %></td>
	<td><%=h @misc_pool.pool_description %></td>
  </tr>
</table>

<%= render :partial => 'misc_oligos/list_oligos', :locals => {:misc_oligos => @misc_pool.misc_oligos} %>

