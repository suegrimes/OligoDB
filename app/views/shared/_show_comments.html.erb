<% if !comments.empty? %>
  <b>Comments:</b><br />
  <table>
  <% for c in comments %>
    <tr>
      <td>(<%= c.user.login %>)</td>
      <td><%= c.created_at.strftime("%m-%d-%Y %I:%M%p") %></td>
	  <td width=10>&nbsp</td>
      <td><%= c.title %> : </td> 
	  <td><%= c.comment%></td>
	  <% if c.user_id == current_user.id %>
	    <td><%= link_to "Edit", :controller => :comments, :action => :edit, :id => c.id %></td>
	  <% end %>
	</tr>
  <% end %>
  </table>
<% end %>
