<table class="border">
  <tr>
    <th>Oligo ID</th>
    <th>Oligo name (1st 50 chars)</th>
    <th>Oligo type</th>
	<th>Sequence (bases 1-40) </th>
	<th>Plate ID</th>
	<th>Plate#</th>
	<th>Well Seq</th>
	<th>Notes</th>
  </tr>

<% for oligo in misc_oligos %>
  <tr>
    <td><%=h oligo.id %></td>
    <td><%=h oligo.oligo_name[0,49] %></td>
    <td><%=h oligo.oligo_type_descr %></td>
	<td><%=h oligo.sequence[0,39] %></td>
	<td><%=h oligo.misc_plate_id %></td>
	<td><%=h oligo.plate_number %></td>
	<td><%=h oligo.well_order %></td>
	<td><%=h oligo.notes %></td>
    <td><%= link_to 'Show', oligo %></td>
  </tr>
<% end %>
</table>
