<% checkbox ||= false %>

<table class="border">
  <tr>
  	<% if checkbox == true %><th>&nbsp;</th><% end %>
    <th>Oligo ID</th>
    <th>Oligo name (chars 1-50)</th>
    <th>Oligo type</th>
	<th>Sequence Ordered (bases 1-40) </th>
	<th>Plate#/Well</th>
	<th>Notes</th>
  </tr>

<% for oligo in misc_oligos %>
  <tr>
  	<% if checkbox == true %><td><%= check_box_tag("oligo_id[#{oligo.id}]") %></td><% end %>
    <td><%=h oligo.id %></td>
    <td><%=h oligo.oligo_name[0,49] %></td>
    <td><%=h oligo.oligo_type_descr %></td>
	<td><%=h oligo.sequence[0,39] %></td>
	<td><%=h oligo.plate_number %>/<%=h oligo.well_coord %></td>
	<td><%=h oligo.notes %></td>
    <td><%= link_to 'Show', oligo %></td>
  </tr>
<% end %>
</table>
